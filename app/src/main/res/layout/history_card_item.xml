<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/cv2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark"
            android:orientation="vertical"
            android:padding="15dp">

            <TextView
                android:id="@+id/DestinationHist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Destination" />

            <TextView
                android:id="@+id/TypeHist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Type" />

            <TextView
                android:id="@+id/Depart_DateHist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Depart Date" />

            <TextView
                android:id="@+id/Depart_TimeHist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Depart Time" />

            <TextView
                android:id="@+id/Return_DateHist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Return Date" />

            <TextView
                android:id="@+id/Return_TimeHist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Return Time" />

            <TextView
                android:id="@+id/PriceHist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Price" />

        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>
