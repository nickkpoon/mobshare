<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/cv2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark"
            android:orientation="vertical"
            android:padding="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/Depart_DateHist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Departure Date"
                    android:textSize="20sp"
                    android:textColor="@color/cardViewTitle"
                    />

                <TextView
                    android:id="@+id/Depart_TimeHist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="Depart Time"
                    android:textSize="12sp"
                    android:textColor="@color/cardViewTime"
                    />

                <TextView
                    android:id="@+id/PriceHist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Price"
                    android:layout_weight="1"
                    android:textColor="@color/cardViewPrice"
                    android:gravity="right"/>
                
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/DestinationHist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Destination" />

                <TextView
                    android:id="@+id/TypeHist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="Type" />



            </LinearLayout>






            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/Return_DateHist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:text="Return Date"
                    android:textColor="@color/cardViewTitle"
                    />

                <TextView
                    android:id="@+id/Return_TimeHist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:textSize="12sp"
                    android:text="Return Time"
                    android:textColor="@color/cardViewTime"                    />



            </LinearLayout>





        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>
